$('#listing').fadeOut(250, function() {
  $('#listing').html('<%= escape_javascript(render :partial => 'quip.html.haml', :collection => @quips) %>');
  quips_scroller['page'] = 1;
  quips_scroller['loading'] = false;
  $('#sort_options a').removeClass('selected');
  $('#sort_options a#sort_<%= session[:sort] %>').addClass('selected');
  $('#listing').show();
  window.scrollTo(0,0);
});
