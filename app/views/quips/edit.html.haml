%h1 Editing quip
= form_for(@quip) do |f|
  = f.error_messages
  %p
    = f.label :source
    %br/
    = f.text_field :source
  %p
    = f.label :submitter
    %br/
    = f.text_field :submitter
  %p
    = f.label :date
    %br/
    = f.date_select :date
  %p
    = f.label :quip
    %br/
    = f.text_area :quip
  %p
    = f.submit "Update"
= link_to 'Show', @quip
|
