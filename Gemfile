source 'http://rubygems.org'

gem 'rails', '~> 3.2'
gem 'jquery-rails'
gem 'thinking-sphinx'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'thin'

gem 'pg'
gem 'haml'

group :assets do
  gem 'sass-rails'
end

gem 'kaminari'
gem 'recaptcha', :require => 'recaptcha/rails'

group :development do
  gem 'debugger'
end

# Deploy with Capistrano
gem 'capistrano'

